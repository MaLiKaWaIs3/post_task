{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.2"
    }
  },
  "installCommand": "",
  "buildCommand": "composer install --no-dev --prefer-dist --optimize-autoloader && npm ci && npm run build",
  "outputDirectory": "public",
  "routes": [
    { "src": "/build/(.*)", "headers": { "Cache-Control": "public, max-age=31536000, immutable" }, "dest": "/public/build/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}


